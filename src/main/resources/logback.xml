<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="de.tb.simulator" level="DEBUG"/>
    <logger name="de.tb.evaluator" level="INFO"/>
    <logger name="de.tb.test" level="INFO"/>

</configuration>